<%- include('./includes/head') %>
<%- include('./includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">

            <h1 class="text-center">Agenda</h1>
            <p class="text-center lead">Seus contatos estao aqui!</p>
            
            <%- include('./includes/messages')%>

            <% if(contatos.length > 0 && user) { %>
            <div class="responsive-table">
                <table class="table">
                        <% contatos.forEach(contato => { %>
                        <tr>
                            <td><%= contato.nome %></td>
                            <td><%= contato.sobrenome %></td>
                            <td><%= contato.email %></td>
                            <td><%= contato.telefone %></td>
                            <td><a class='text-center' href="/contato/<%= contato.id %>">Editar</a></td>
                            <td><a class='text-center text-danger' href="/contato/delete/<%= contato.id %>">Apagar</a></td>
                        </tr>
                        <%  }) %> 
                    </table>
                </div>
            </div>
            <% } else if(user){ %>
                <p class="text-center lead"> Cadastre novos contatos!</p>
            <% } else { %>
                <p class="text-center lead"> Fa√ßa login para ver seus contatos!</p>
            <% } %>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('./includes/footer') %>
